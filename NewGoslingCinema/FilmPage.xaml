<Window x:Class="NewGoslingCinema.FilmPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewGoslingCinema"
        mc:Ignorable="d"
        Title="FilmPage" Height="536" Width="696">
    <Grid>
        <Image RenderOptions.BitmapScalingMode="HighQuality" x:Name="Poster" HorizontalAlignment="Left" Height="479" Margin="10,27,0,0" VerticalAlignment="Top" Width="279"/>
        <Label x:Name="genre" Content="Label" HorizontalAlignment="Left" Margin="441,176,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBlock x:Name="filmname" HorizontalAlignment="Left" Margin="365,10,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48" FontWeight="Bold"/>
        <TextBlock x:Name="year" HorizontalAlignment="Left" Margin="425,128,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24"/>

    </Grid>
</Window>
