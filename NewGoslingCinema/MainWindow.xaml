<Window x:Class="NewGoslingCinema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewGoslingCinema"
        mc:Ignorable="d"
        Title="Кинотеатр" Height="552" Width="816" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid Background="#FF4F4FD1">
        <TabControl Background="#FF0E0A68">
            <TabItem Header="Афиша">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF425B8F" Offset="0"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <ScrollViewer 
                        x:Name="Scroll" HorizontalAlignment="Center" Width="315" VerticalAlignment="Center" Height="493">
                        <ScrollViewer.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="1"/>
                                <GradientStop Color="#FF425B8F" Offset="0"/>
                            </LinearGradientBrush>
                        </ScrollViewer.Background>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Билеты">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF425B8F" Offset="0"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <ListBox x:Name="Cage" d:ItemsSource="{Binding}" Width="298" Height="412" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="502,39,0,0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu>
                                            <MenuItem Header="Очистить" Name="Delete">
                                                <MenuItem.Style>
                                                    <Style TargetType="MenuItem">
                                                        <EventSetter Event="Click" Handler="Delete_Click"/>
                                                    </Style>
                                                </MenuItem.Style>
                                            </MenuItem>
                                            <MenuItem Header="Купить" Name="Buy">
                                                <MenuItem.Style>
                                                    <Style TargetType="MenuItem">
                                                        <EventSetter Event="Click" Handler="Buy_Click"/>
                                                    </Style>
                                                </MenuItem.Style>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                    <Label Content="Корзина" HorizontalAlignment="Left" Margin="610,5,0,0" VerticalAlignment="Top" Width="82" FontSize="18"/>
                    <Button x:Name="Waste" Content="Очистить всё" HorizontalAlignment="Left" Margin="680,462,0,0" Width="120" FontSize="16" Click="Waste_Click" VerticalAlignment="Top" Height="28"/>
                    <Button x:Name="BuyAll" Content="Купить всё" HorizontalAlignment="Left" Margin="502,462,0,0" Height="25" Width="110" FontSize="16" Click="BuyAll_Click" VerticalAlignment="Top"/>
                    <ListBox x:Name="Tickets" d:ItemsSource="{Binding}" Margin="10,40,333,40" Height="413" Width="299" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Label Content="Список купленных билетов" HorizontalAlignment="Left" Margin="41,5,0,0" VerticalAlignment="Top" FontSize="18"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
